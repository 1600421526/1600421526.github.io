<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LOOM-Scope Model Leaderboard</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }
        
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #0f2027, #203a43, #2c5364);
            color: #f0f8ff;
            line-height: 1.6;
            padding: 20px;
            min-height: 100vh;
        }
        
        .container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 20px;
        }
        
        header {
            text-align: center;
            margin-bottom: 30px;
            padding: 20px;
            background: rgba(16, 42, 67, 0.7);
            border-radius: 12px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
            backdrop-filter: blur(4px);
        }
        
        h1 {
            font-size: 2.8rem;
            margin-bottom: 10px;
            color: #4fc3f7;
            text-shadow: 0 0 10px rgba(79, 195, 247, 0.5);
        }
        
        .subtitle {
            font-size: 1.2rem;
            max-width: 800px;
            margin: 0 auto;
            color: #bbdefb;
        }
        
        .ability-controls {
            display: flex;
            justify-content: center;
            gap: 15px;
            margin-bottom: 20px;
            flex-wrap: wrap;
        }
        
        .ability-btn {
            background: rgba(30, 70, 110, 0.8);
            border: 1px solid #3a7bd5;
            color: #e3f2fd;
            padding: 12px 20px;
            border-radius: 30px;
            cursor: pointer;
            transition: all 0.3s ease;
            font-size: 1rem;
            font-weight: 600;
            min-width: 140px;
            text-align: center;
        }
        
        .ability-btn:hover {
            background: rgba(58, 123, 213, 0.6);
            transform: translateY(-2px);
        }
        
        .ability-btn.active {
            background: rgba(58, 123, 213, 0.9);
            box-shadow: 0 0 12px rgba(58, 123, 213, 0.7);
        }
        
        .table-container {
            overflow-x: auto;
            background: rgba(16, 42, 67, 0.7);
            border-radius: 12px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4);
            padding: 20px;
            backdrop-filter: blur(4px);
            margin-bottom: 30px;
        }
        
        table {
            width: 100%;
            border-collapse: collapse;
            min-width: 1000px;
        }
        
        th, td {
            padding: 14px 10px;
            text-align: center;
            border: 1px solid rgba(58, 123, 213, 0.3);
        }
        
        thead th {
            background: rgba(25, 65, 105, 0.9);
            color: #bbdefb;
            font-weight: 600;
            position: sticky;
            top: 0;
            cursor: pointer;
            transition: background 0.3s;
        }
        
        thead th:hover {
            background: rgba(40, 85, 135, 0.9);
        }
        
        thead th.sorted-asc::after {
            content: " ▲";
            font-size: 0.8em;
        }
        
        thead th.sorted-desc::after {
            content: " ▼";
            font-size: 0.8em;
        }
        
        tbody tr:nth-child(odd) {
            background: rgba(30, 50, 80, 0.4);
        }
        
        tbody tr:nth-child(even) {
            background: rgba(20, 40, 70, 0.4);
        }
        
        tbody tr:hover {
            background: rgba(58, 123, 213, 0.2);
        }
        
        .rank-col {
            width: 70px;
            font-weight: bold;
            color: #4fc3f7;
        }
        
        .model-col {
            min-width: 220px;
            text-align: left;
            padding-left: 15px;
        }
        
        .score-col {
            width: 100px;
            font-weight: bold;
        }
        
        .algorithm-group {
            background: rgba(40, 80, 120, 0.7);
        }
        
        .model-label {
            display: inline-block;
            padding: 6px 15px;
            border-radius: 20px;
            font-weight: 600;
            font-size: 0.95rem;
        }
        
        .Qwen {
            background: linear-gradient(135deg, #2193b0, #6dd5ed);
            color: #003350;
        }
        
        .Llama {
            background: linear-gradient(135deg, #f46b45, #eea849);
            color: #4d1c00;
        }
        
        .best-score {
            background: rgba(79, 195, 247, 0.2);
            color: #4fc3f7;
            font-weight: bold;
            font-size: 1.1rem;
        }
        
        .legend {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin: 20px 0;
            flex-wrap: wrap;
        }
        
        .legend-item {
            display: flex;
            align-items: center;
            gap: 8px;
            font-size: 0.9rem;
        }
        
        .legend-color {
            width: 20px;
            height: 20px;
            border-radius: 50%;
        }
        
        .legend-qwen {
            background: linear-gradient(135deg, #2193b0, #6dd5ed);
        }
        
        .legend-llama {
            background: linear-gradient(135deg, #f46b45, #eea849);
        }
        
        .ability-explanation {
            margin-top: 30px;
            background: rgba(16, 42, 67, 0.7);
            padding: 20px;
            border-radius: 12px;
        }
        
        .ability-explanation h2 {
            color: #4fc3f7;
            margin-bottom: 15px;
            text-align: center;
        }
        
        .ability-list {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
        }
        
        .ability-item {
            background: rgba(30, 70, 110, 0.4);
            padding: 15px;
            border-radius: 8px;
            border-left: 4px solid #3a7bd5;
            transition: transform 0.3s;
        }
        
        .ability-item:hover {
            transform: translateY(-5px);
            background: rgba(40, 85, 135, 0.5);
        }
        
        .ability-item h3 {
            color: #bbdefb;
            margin-bottom: 10px;
            font-size: 1.1rem;
            display: flex;
            align-items: center;
            gap: 10px;
        }
        
        .ability-item h3 i {
            color: #4fc3f7;
        }
        
        .ability-item p {
            color: #e3f2fd;
            font-size: 0.95rem;
        }
        
        footer {
            text-align: center;
            margin-top: 40px;
            padding: 20px;
            color: #bbdefb;
            font-size: 0.9rem;
        }
        
        @media (max-width: 768px) {
            h1 {
                font-size: 2.2rem;
            }
            
            .ability-btn {
                padding: 10px 15px;
                min-width: 120px;
                font-size: 0.9rem;
            }
            
            table {
                min-width: 800px;
            }
        }
        
        /* Animation for table rows */
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }
        
        tbody tr {
            animation: fadeIn 0.5s ease-out;
            animation-fill-mode: both;
        }
        
        tbody tr:nth-child(1) { animation-delay: 0.1s; }
        tbody tr:nth-child(2) { animation-delay: 0.2s; }
        tbody tr:nth-child(3) { animation-delay: 0.3s; }
        tbody tr:nth-child(4) { animation-delay: 0.4s; }
        tbody tr:nth-child(5) { animation-delay: 0.5s; }
    </style>
</head>
<body>
    <div class="container">
        <header>
            <h1><i class="fas fa-chart-bar"></i> LOOM-Scope Model Leaderboard</h1>
            <p class="subtitle">
                The model leaderboard showcases performance rankings across LOOM-Scope's multidimensional benchmarks
            </p>
        </header>
        
        <div class="ability-controls">
            <button class="ability-btn active" data-ability="all">All Capabilities</button>
            <button class="ability-btn" data-ability="faithfulness">Faithfulness</button>
            <button class="ability-btn" data-ability="general">General Tasks</button>
            <button class="ability-btn" data-ability="reasoning">Reasoning</button>
            <button class="ability-btn" data-ability="retrieval">Retrieval</button>
            <button class="ability-btn" data-ability="generation">Generation</button>
            <button class="ability-btn" data-ability="specialization">Specialization</button>
        </div>
        
        <div class="table-container">
            <table id="model-leaderboard">
                <thead>
                    <tr>
                        <th class="basic-header rank-col">Rank</th>
                        <th class="basic-header model-col">Model</th>
                        <th class="basic-header score-col">Avg Score</th>
                        <th class="algorithm-group" data-ability="faithfulness">Faithfulness</th>
                        <th class="algorithm-group" data-ability="general">General Tasks</th>
                        <th class="algorithm-group" data-ability="reasoning">Reasoning</th>
                        <th class="algorithm-group" data-ability="retrieval">Retrieval</th>
                        <th class="algorithm-group" data-ability="generation">Generation</th>
                        <th class="algorithm-group" data-ability="specialization">Specialization</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Table content will be generated by JavaScript -->
                </tbody>
            </table>
        </div>
        
        <div class="legend">
            <div class="legend-item">
                <div class="legend-color legend-qwen"></div>
                <span>Qwen Model Series</span>
            </div>
            <div class="legend-item">
                <div class="legend-color legend-llama"></div>
                <span>Llama Model Series</span>
            </div>
        </div>
        
        <div class="ability-explanation">
            <h2><i class="fas fa-lightbulb"></i> Capability Dimensions</h2>
            <div class="ability-list">
                <div class="ability-item">
                    <h3><i class="fas fa-check-circle"></i> Faithfulness</h3>
                    <p>Evaluates model consistency with source information, avoiding hallucinations or inaccuracies.</p>
                </div>
                <div class="ability-item">
                    <h3><i class="fas fa-tasks"></i> General Tasks</h3>
                    <p>Measures performance on common NLP tasks including text understanding and classification.</p>
                </div>
                <div class="ability-item">
                    <h3><i class="fas fa-brain"></i> Reasoning</h3>
                    <p>Tests logical reasoning, mathematical computation, and complex problem-solving abilities.</p>
                </div>
                <div class="ability-item">
                    <h3><i class="fas fa-search"></i> Retrieval</h3>
                    <p>Assesses ability to locate and extract relevant information from large contexts.</p>
                </div>
                <div class="ability-item">
                    <h3><i class="fas fa-pen-alt"></i> Generation</h3>
                    <p>Evaluates coherent, contextually appropriate, and creative text generation.</p>
                </div>
                <div class="ability-item">
                    <h3><i class="fas fa-graduation-cap"></i> Specialization</h3>
                    <p>Measures expertise in specialized domains like law, medicine, and programming.</p>
                </div>
            </div>
        </div>
        
        <footer>
            <p>LOOM-Scope Model Evaluation Benchmark | Data updated: June 1, 2025</p>
            <p>© 2025 DeepSeek AI Research. All rights reserved.</p>
        </footer>
    </div>

    <script>
        // Model performance data
        const scores = {
            "Qwen3-30B-A3B": [37.96,40.61,11.61,78.32,43.24,60.31,48.96,41.30,22.82,28.42,100.00,24.12,14.14,83.24,56.09],
            "Qwen3-14B": [35.64,43.84,11.79,74.94,45.47,59.15,56.41,31.95,21.26,29.85,100.00,27.35,10.24,85.75,55.87],
            "Meta-Llama-3.1-8B-Instruct": [5.79,39.70,11.81,86.79,37.94,57.42,37.68,25.40,25.66,30.40,91.00,20.06,33.64,45.96,51.24],
            "Qwen3-8B": [33.18,41.15,11.67,67.68,38.62,55.28,52.32,32.61,15.15,27.25,64.00,21.92,8.06,81.99,51.78],
            "Qwen3-4B": [24.55,39.03,11.69,70.29,39.32,55.01,42.06,33.66,18.24,32.52,62.00,17.95,13.05,74.25,46.92]
        };
        
        // Capability definitions
        const ability = {
            "faithfulness": ["L_CiteEval"], 
            "general": ["LEval", "LooGLE", "RULER(0-128k)", "longbench"],
            "reasoning": ["Counting-Stars", "LongIns", "LVEval", "longbench_v2", "NIAH"], 
            "retrieval": ["NThread", "InfiniteBench", "LongWriter"], 
            "generation": ["LongWriter"], 
            "specialization": ["LIBRA"] 
        };
        
        // Capability weightings
        const abilitySize = {
            "faithfulness": 1,
            "general": 4,
            "reasoning": 5,
            "retrieval": 3,
            "generation": 1,
            "specialization": 1
        };
        
        // Calculate capability averages
        const calculateAbilityAverage = (modelScores, abilityName) => {
            const abilityTests = ability[abilityName];
            const startIndex = getAbilityStartIndex(abilityName);
            const count = abilitySize[abilityName];
            
            let sum = 0;
            for (let i = startIndex; i < startIndex + count; i++) {
                sum += modelScores[i];
            }
            return sum / count;
        };
        
        // Get starting index for each capability
        const getAbilityStartIndex = (abilityName) => {
            let index = 0;
            const abilities = Object.keys(ability);
            
            for (const ability of abilities) {
                if (ability === abilityName) break;
                index += abilitySize[ability];
            }
            
            return index;
        };
        
        // Prepare model data with calculated metrics
        const prepareModelData = () => {
            return Object.keys(scores).map(model => {
                const modelScores = scores[model];
                const avgScore = modelScores.reduce((sum, score) => sum + score, 0) / modelScores.length;
                
                return {
                    name: model,
                    scores: modelScores,
                    avgScore: avgScore,
                    faithScore: calculateAbilityAverage(modelScores, "faithfulness"),
                    generalScore: calculateAbilityAverage(modelScores, "general"),
                    reasoningScore: calculateAbilityAverage(modelScores, "reasoning"),
                    retrievalScore: calculateAbilityAverage(modelScores, "retrieval"),
                    generationScore: calculateAbilityAverage(modelScores, "generation"),
                    specializationScore: calculateAbilityAverage(modelScores, "specialization")
                };
            });
        };
        // Generate table row for each model
        const generateModelRow = (model, rank) => {
            const isQwen = model.name.includes("Qwen");
            const modelClass = isQwen ? "Qwen" : "Llama";
            
            return `<tr>
                <td class="rank-col">${rank}</td>
                <td class="model-col"><span class="model-label ${modelClass}">${model.name}</span></td>
                <td class="best-score">${model.avgScore.toFixed(2)}</td>
                <td>${model.faithScore.toFixed(2)}</td>
                <td>${model.generalScore.toFixed(2)}</td>
                <td>${model.reasoningScore.toFixed(2)}</td>
                <td>${model.retrievalScore.toFixed(2)}</td>
                <td>${model.generationScore.toFixed(2)}</td>
                <td>${model.specializationScore.toFixed(2)}</td>
            </tr>`;
        };
        
        // Render the leaderboard table
        const renderTable = (models) => {
            const tbody = document.querySelector("#model-leaderboard tbody");
            tbody.innerHTML = "";
            
            models.forEach((model, index) => {
                tbody.innerHTML += generateModelRow(model, index + 1);
            });
        };
        
        // Sort table by capability
        const sortTable = (ability, direction = "desc") => {
            let models = prepareModelData();
            
            // Update sort indicators
            document.querySelectorAll("th[data-ability]").forEach(th => {
                th.classList.remove("sorted-asc", "sorted-desc");
            });
            
            // Add current sort indicator
            const header = document.querySelector(`th[data-ability="${ability}"]`);
            if (header) {
                header.classList.add(direction === "asc" ? "sorted-asc" : "sorted-desc");
            }
            
            // Sort models
            models.sort((a, b) => {
                const aScore = a[`${ability}Score`];
                const bScore = b[`${ability}Score`];
                
                if (direction === "asc") {
                    return aScore - bScore;
                } else {
                    return bScore - aScore;
                }
            });
            
            renderTable(models);
        };
        
        // Filter visible capabilities
        const filterAbilities = (selectedAbility) => {
            // Show all columns initially
            document.querySelectorAll("th[data-ability], td").forEach(cell => {
                cell.style.display = "";
            });
            
            // Update active button
            document.querySelectorAll(".ability-btn").forEach(btn => {
                btn.classList.remove("active");
            });
            document.querySelector(`.ability-btn[data-ability="${selectedAbility}"]`).classList.add("active");
            
            // Hide non-selected capabilities
            if (selectedAbility !== "all") {
                document.querySelectorAll("th[data-ability], td").forEach((cell, index) => {
                    if (index > 2 && cell.dataset.ability !== selectedAbility) {
                        cell.style.display = "none";
                    }
                });
            }
        };
        
        // Initialize event listeners
        const initEventListeners = () => {
            // Capability header sorting
            document.querySelectorAll("th[data-ability]").forEach(th => {
                th.addEventListener("click", (e) => {
                    const ability = e.target.dataset.ability;
                    const currentDirection = e.target.classList.contains("sorted-asc") ? "desc" : "asc";
                    sortTable(ability, currentDirection);
                });
            });
            
            // Capability filter buttons
            document.querySelectorAll(".ability-btn").forEach(btn => {
                btn.addEventListener("click", (e) => {
                    const ability = e.target.dataset.ability;
                    filterAbilities(ability);
                    
                    // Apply sorting when selecting a capability
                    if (ability !== "all") {
                        sortTable(ability, "desc");
                    } else {
                        sortTable("avg", "desc");
                    }
                });
            });
        };
        
        // Initialize on page load
        window.onload = () => {
            initEventListeners();
            
            // Initial render (sorted by average score)
            let models = prepareModelData();
            models.sort((a, b) => b.avgScore - a.avgScore);
            renderTable(models);
            
            // Set initial sort indicator
            document.querySelector("th[data-ability]").classList.add("sorted-desc");
        };
    </script>
</body>
</html>